<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:attr/windowBackground"
    tools:context=".SettingsActivity">

    <!-- YENİ: Toolbar'a özel stil uygulandı. -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="?attr/toolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Ayarlar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                style="?attr/textAppearanceTitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Genel Ayarlar"
                android:textColor="?attr/colorPrimary" />

            <!-- GÜNCELLEME: Metin rengi artık temadan doğru şekilde gelecek. -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/weekendAdjustmentSwitch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/weekend_adjustment_label"
                android:textColor="?android:attr/textColorPrimary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/listDivider" />

            <TextView
                style="?attr/textAppearanceTitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Ödeme Ayarları"
                android:textColor="?attr/colorPrimary" />

            <!-- GÜNCELLEME: Tüm ayar metinlerinin rengi tema ile ilişkilendirildi. -->
            <TextView
                android:id="@+id/setPayPeriodButton"
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/set_pay_period_button"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/setPaydayButton"
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/set_payday_button"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/setSalaryButton"
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/set_salary_button_text"
                android:textColor="?android:attr/textColorPrimary" />

            <TextView
                android:id="@+id/setMonthlySavingsButton"
                style="?attr/textAppearanceBodyLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/set_monthly_savings_button"
                android:textColor="?android:attr/textColorPrimary" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
